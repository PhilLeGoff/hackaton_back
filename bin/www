#!/usr/bin/env node

import { createServer } from "http";
import debugLib from "debug";
import app from "../app.js"; // âœ… Import app.js
import { Server } from "socket.io";

const debug = debugLib("back-hackaton:server");

/**
 * Get port from environment and store in Express.
 */
const port = normalizePort(process.env.PORT || "5000");
app.set("port", port);

/**
 * Create HTTP & WebSocket Server.
 */
const server = createServer(app);
const io = new Server(server, {
  cors: {
    origin: "*",
    methods: ["GET", "POST"],
  },
});

/**
 * âœ… Initialize a Map to track online users
 */
io.onlineUsers = new Map(); // âœ… Fix: Define onlineUsers before using it

/**
 * Attach io instance to requests
 */
app.set("io", io);

/**
 * Listen on the provided port.
 */
server.listen(port, () => {
  console.log(`ðŸš€ Server running on http://localhost:${port}`);
});
server.on("error", onError);
server.on("listening", onListening);

/**
 * --- SOCKET.IO IMPLEMENTATION ---
 */
io.on("connection", (socket) => {
  console.log("ðŸŸ¢ A user connected:", socket.id);

  socket.on("user_connected", (userId) => {
    if (userId) {
      io.onlineUsers.set(userId.toString(), socket.id); // âœ… Store the user ID and socket ID
      console.log(`âœ… User ${userId} is now online with socket ${socket.id}`);
    } else {
      console.warn("âš ï¸ Warning: Received empty userId on connection!");
    }
  });

  socket.on("disconnect", () => {
    for (let [userId, socketId] of io.onlineUsers.entries()) {
      if (socketId === socket.id) {
        io.onlineUsers.delete(userId);
        console.log(`âŒ User ${userId} disconnected`);
      }
    }
  });

  socket.on("notify", async ({ userId, type, tweetId }) => {
    const recipientSocketId = io.onlineUsers.get(userId); // âœ… Only notify the tweet owner
  
    if (recipientSocketId) {
      io.to(recipientSocketId).emit("notification", { type, tweetId });
      console.log(`ðŸ”” Sent notification to user ${userId} for ${type} on tweet ${tweetId}`);
    } else {
      console.log(`âš ï¸ User ${userId} is offline, notification not sent`);
    }
  });

});

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== "listen") throw error;
  const bind = typeof port === "string" ? "Pipe " + port : "Port " + port;
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = server.address();
  const bind = typeof addr === "string" ? "pipe " + addr : "port " + addr.port;
  debug("Listening on " + bind);
  console.log(`ðŸš€ Server is running on ${bind}`);
}
